<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu_principal"
    android:orientation="vertical"
    tools:context=".Resultados">

    <!-- ICONOS -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/resultados"
            android:padding="30dp"/>

        <TextView
            android:id="@+id/puntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kerokero"
            android:text="NAME - XX/XX"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineResultHor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineResultHor1"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kerokero"
            android:text="Lore ipsum"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineResultHor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/puntuacion" />

        <LinearLayout
            android:id="@+id/linearlayout_botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/btn_restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:backgroundTint="@color/naranja"
                android:fontFamily="@font/kerokero"
                android:padding="10dp"
                android:text="@string/string_restart"
                android:textColor="@color/white"
                android:textSize="30dp"
                tools:text="@string/string_restart" />

            <Button
                android:id="@+id/btn_volverMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:backgroundTint="@color/naranja"
                android:fontFamily="@font/kerokero"
                android:padding="10dp"
                android:text="@string/string_volverMenu"
                android:textColor="@color/white"
                android:textSize="30dp"
                tools:text="@string/string_volverMenu" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_clasif_resultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            app:backgroundTint="@color/naranja"
            android:fontFamily="@font/kerokero"
            android:padding="10dp"
            android:text="@string/string_clasif"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:text="@string/string_clasif" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>